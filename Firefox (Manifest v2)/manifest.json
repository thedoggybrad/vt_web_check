{
  "manifest_version": 2,
  "name": "VirusTotal Website Security Check",
  "version": "1.12",
  "description": "It opens a VirusTotal website scan page on the URL you are visiting right now, in just a click of a button, of course with your consent.",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "192": "android-chrome-192x192.png"
  },
  "permissions": [
    "activeTab",
    "management"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "192": "android-chrome-192x192.png"
    }
  },
  "privacy_policy": "https://github.com/thedoggybrad/vt_web_check/blob/main/privacypolicy.md"
}